<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".snake.snakes">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greedy Snake"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2D7C12"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/edtScore"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:hint="input your name here and click the START button"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="349dip"
        android:layout_height="80dip"
        android:layout_marginStart="32dip"
        android:layout_marginLeft="32dip"
        android:layout_marginEnd="32dip"
        android:layout_marginRight="32dip"
        android:layout_marginBottom="32dip"
        android:background="#4185B3"
        android:bufferType="normal"
        android:contentDescription="game start"
        android:drawingCacheQuality="auto"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="START "
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtScore"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="338dip"
        android:layout_height="318dip"
        android:foreground="@drawable/screenshot_from_2020_11_11_16_02_23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245"/>

</androidx.constraintlayout.widget.ConstraintLayout>